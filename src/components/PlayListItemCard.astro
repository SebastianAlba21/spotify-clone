---
import { CardPlayButton } from './CardPlayButton.jsx'
const { playlist } = Astro.props
const { id, title, cover, color, artists } = playlist

const artistsString = artists.join(', ')
---

<article
	class="group relative hover:bg-zinc-800 shadow-lg hover:shadow-xl bg-zinc-500/30 rounded-md">
	<div
		class=`absolute right-4 bottom-24 translate-y-4
	transition-all duration-500 opacity-0 gruop-hover:translate-y-0 group-hover:opacity-100 z-10
	`>
		<CardPlayButton
			id={id}
			client:visible
		/>
	</div>
	<a
		href={`/playlist/${id}`}
		class="playlist-item flex flex-col relative p-2 w-44 overflow-hidden items-center gap-2 pb-6 transition-all duration-300"
		transition:name=`playlist ${id} box`>
		<picture class="h-auto w-full aspect-square flex-none">
			<img
				src={cover}
				alt={`Cover of ${title} by ${artistsString}`}
				class="object-cover w-full h-full rounded-md"
				transition:name=`playlist ${id} image`
			/>
		</picture>
		<div class="flex flex-auto flex-col px-2">
			<h4
				class="text-sm text-white font-semibold"
				transition:name=`playlist ${id} title`>
				{title}
			</h4>
			<span
				class="text-xs text-gray-400"
				transition:name=`playlist ${id} artists`>
				{artistsString}
			</span>
		</div>
	</a>
</article>
